<?xml version ="1.0"?>

<!-- XML config file used by MaMiCo's FilterPipeline -->

<filter-pipeline>

    <per-instance output="sequence-1">
		<test-pod input="md" domain-start="0;0;0" domain-end="5;5;5">
            <write-to-file 
				filtered-values="all"
                location="POD_before"
				overwrite="true"
			/>
			<POD
				time-window-size="5"
				kmax="1"
			/>
			<write-to-file 
				filtered-values="all"
				location="POD_after"
				overwrite="false"
            />
        </test-pod>

		<test-gauss input="md" domain-start="0;0;0" domain-end="5;5;5">
			<write-to-file 
				filtered-values="all"
                location="gauss_before"
            />
			<gauss
				filtered-values="all"
				extrapolation="none"
				dim="1" 
			/>
			<write-to-file 
				filtered-values="all"
                location="gauss_after"
            />
        </test-gauss>

 		<test-gausslin input="md" domain-start="0;0;0" domain-end="5;5;5">
			<write-to-file 
				filtered-values="all"
                location="gausslin_before"
            />
			<gauss
				filtered-values="all"
				extrapolation="linear"
				dim="1" 
			/>
			<write-to-file 
				filtered-values="all"
                location="gausslin_after"
            />
        </test-gausslin>
   
    </per-instance>
    

    <post-multi-instance output="md">
        <!-- Beispiel einer leeren Sequenz mit den von MultiMDCellService gemittelten Cells ("multimd") als Input -->
        <sequence-1 input="md"/>

        <!-- Falls post-multi-instance-filtering nicht gebraucht ist, einfach output = input -->
    </post-multi-instance>

</filter-pipeline>
