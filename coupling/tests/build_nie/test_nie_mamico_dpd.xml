<?xml version="1.0"?>

<!-- example for a mamico configuration, as used in form of sub-tags in extended xml-files -->
<mamico>
  <macroscopic-cell-configuration
    cell-size="1.0 ; 1.0 ; 1.0"
    linked-cells-per-macroscopic-cell="1 ; 1 ; 1"
    write-every-microscopic-timestep="0"
    microscopic-filename="MacroscopicCell_micro"
    write-every-macroscopic-timestep="1"
    macroscopic-filename="MacroscopicCell_macro"
  />
  <particle-insertion type="none" maximum-number-of-iterations="100" maximum-number-of-restarts="500" insert-every-timestep="10" />
  <!--particle-insertion type="none" -->
  <momentum-insertion type="nie-velocity-imposition" outermost-overlap-layer="2" innermost-overlap-layer="3" />
  <transfer-strategy type="nie-transfer" mass-flux-west="no" mass-flux-east="no" mass-flux-north="no" mass-flux-south="no" mass-flux-bottom="no" mass-flux-top="no" />
  <boundary-force type="none" west="no" east="no" north="no" south="no" bottom="yes" top="yes" density="0.81" temperature="1.1" />
  <!--boundary-force type="none" -->
  <parallel-topology type="xyz" />
</mamico>
